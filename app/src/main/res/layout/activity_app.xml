<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".App">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/appFragment"
        tools:layout="@layout/fragment_sights"
        android:name="com.example.yandexmaps.FragmentSights"
        android:layout_width="match_parent"
        android:layout_height="700dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/appBtn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:backgroundTint="@color/button"
            android:text="@string/appBtn1" />

        <Button
            android:id="@+id/appBtn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:backgroundTint="@color/button"
            android:text="@string/appBtn2" />
    </LinearLayout>

</LinearLayout>